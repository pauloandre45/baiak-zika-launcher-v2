<Window x:Class="BaiakZikaLauncher.MainWindow"
		xmlns:system="clr-namespace:System;assembly=mscorlib"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:BaiakZikaLauncher"
		Icon="pack://application:,,,/Assets/launcher_ico.png"
		mc:Ignorable="d" 
		Height="500"
		Width="800"
		FontFamily="Segoe UI"
		Background="#1a1a1a"
		x:Name="home"
		WindowStyle="None"
		ResizeMode="NoResize"
		WindowState="Normal"
		WindowStartupLocation="CenterScreen"
		Title="Baiak-Zika Launcher"
		Loaded="TibiaLauncher_Load"
		AllowsTransparency="True">
	<!-- Main Container with straight edges -->
	<Border CornerRadius="0" Background="Transparent" BorderBrush="#333" BorderThickness="1">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="40"/>   <!-- Title bar -->
				<RowDefinition Height="140"/>  <!-- Logo section -->
				<RowDefinition Height="130"/>  <!-- Play button section -->
				<RowDefinition Height="120"/>  <!-- News section -->
				<RowDefinition Height="50"/>   <!-- Footer -->
			</Grid.RowDefinitions>
	
			<Grid.Resources>
				<BitmapImage x:Key="BackGroundKey" UriSource="pack://application:,,,/Assets/background.jpg"/>
				<BitmapImage x:Key="LogoKey" UriSource="pack://application:,,,/Assets/logo.png"/>
				<BitmapImage x:Key="LogoCompanyKey" UriSource="pack://application:,,,/Assets/logo_company.png"/>
				<BitmapImage x:Key="DiscordKey" UriSource="pack://application:,,,/Assets/discord.png"/>
				<BitmapImage x:Key="BGButtonUpdateKey" UriSource="pack://application:,,,/Assets/bg_button_update.png"/>
				<BitmapImage x:Key="ButtonPlayKey" UriSource="pack://application:,,,/Assets/button_play.png"/>
				<BitmapImage x:Key="IconPlayKey" UriSource="pack://application:,,,/Assets/icon_play.png"/>
				<BitmapImage x:Key="BgHintsKey" UriSource="pack://application:,,,/Assets/bg_hints.png"/>
				<BitmapImage x:Key="RhLoreKey" UriSource="pack://application:,,,/Assets/rh_lore.png"/>
				
				<!-- Enhanced Storyboards for Animations -->
				<Storyboard x:Key="ButtonHoverIn">
					<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
									To="1.05" Duration="0:0:0.2">
						<DoubleAnimation.EasingFunction>
							<QuadraticEase EasingMode="EaseOut"/>
						</DoubleAnimation.EasingFunction>
					</DoubleAnimation>
					<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
									To="1.05" Duration="0:0:0.2">
						<DoubleAnimation.EasingFunction>
							<QuadraticEase EasingMode="EaseOut"/>
						</DoubleAnimation.EasingFunction>
					</DoubleAnimation>
				</Storyboard>
				
				<Storyboard x:Key="ButtonHoverOut">
					<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
									To="1.0" Duration="0:0:0.2">
						<DoubleAnimation.EasingFunction>
							<QuadraticEase EasingMode="EaseOut"/>
						</DoubleAnimation.EasingFunction>
					</DoubleAnimation>
					<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
									To="1.0" Duration="0:0:0.2">
						<DoubleAnimation.EasingFunction>
							<QuadraticEase EasingMode="EaseOut"/>
						</DoubleAnimation.EasingFunction>
					</DoubleAnimation>
				</Storyboard>
				
				<Storyboard x:Key="FadeInAnimation">
					<DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.8"/>
				</Storyboard>
			</Grid.Resources>
			
			<!-- Background with overlay -->
			<Grid Grid.RowSpan="5">
				<Border CornerRadius="0" ClipToBounds="True">
					<Border.Background>
						<ImageBrush ImageSource="{StaticResource BackGroundKey}" Stretch="UniformToFill"/>
					</Border.Background>
				</Border>
				<!-- Dark overlay for better contrast -->
				<Border CornerRadius="0" Background="#40000000" ClipToBounds="True"/>
			</Grid>
			
			<!-- Window Controls (No Header Bar) -->
			<StackPanel
				Grid.Row="0"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				Margin="0,10,15,0"
				Orientation="Horizontal">
				<Button
					x:Name="MinimizeButton"
					Style="{StaticResource WindowButtonStyle}"
					Content="{StaticResource minimize_ico}"
					Click="MinimizeButton_Click"
					Cursor="Hand"
					Margin="0,0,5,0"/>
				<Button
					x:Name="CloseButton"
					Style="{StaticResource WindowButtonStyle}"
					Content="{StaticResource close_ico}"
					Click="CloseButton_Click"
					Tag="IsCloseButton"
					Cursor="Hand"/>
			</StackPanel>

			<!-- Logo Section - Top Left -->
			<Grid Grid.Row="0" Grid.RowSpan="2">
				<Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="85,10,0,0" Background="Transparent">
					<Border.Effect>
						<DropShadowEffect Color="#FFD700" Direction="0" ShadowDepth="0" Opacity="0.6" BlurRadius="15"/>
					</Border.Effect>
					<Image
						x:Name="ImageLogoServer"
						Height="140"
						Stretch="Uniform"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Visibility="Visible"
						MouseLeftButtonDown="ImageLogoServer_MouseLeftButtonDown"
						MouseMove="ImageLogoServer_MouseMove"
						MouseLeave="ImageLogoServer_MouseLeave"
						RenderTransformOrigin="0.5,0.5">
						<Image.RenderTransform>
							<ScaleTransform/>
						</Image.RenderTransform>
					</Image>
				</Border>
				
				<!-- Discord Logo - Positioned separately -->
				<Image
					x:Name="DiscordLogo"
					Height="45"
					Width="45"
					Source="{StaticResource DiscordKey}"
					Stretch="Uniform"
					HorizontalAlignment="Left"
					VerticalAlignment="Top"
					Visibility="Visible"
					Margin="15,25,0,0"
					Cursor="Hand"
					ToolTip="Join our Discord server!"
					MouseLeftButtonDown="DiscordLogo_MouseLeftButtonDown">
					<Image.Effect>
						<DropShadowEffect Color="#5865F2" Direction="0" ShadowDepth="0" Opacity="0.4" BlurRadius="8"/>
					</Image.Effect>
				</Image>
			</Grid>
<Grid>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
        <TextBlock x:Name="OnlinePlayersTextBlock"
                   Foreground="White"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Text="Players Online: Loading..."
                   Padding="0,2,0,0">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black"
                                  Direction="320"
                                  ShadowDepth="2"
                                  Opacity="0.7"
                                  BlurRadius="4" />
            </TextBlock.Effect>
        </TextBlock>
        
        <Button x:Name="RefreshOnlinePlayersButton"
                Content="Refresh Players"
                Click="RefreshOnlinePlayersButton_Click"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Padding="10,5"
                FontWeight="SemiBold" />
    </StackPanel>
</Grid>


		<!-- Button Section - Under News Box -->
			<!-- Button Section - Under News Box -->
<Grid Grid.Row="3" Grid.RowSpan="2">
	<Grid VerticalAlignment="Bottom" 
		  HorizontalAlignment="Right" 
		  Margin="0,0,50,20"
		  Width="400">
		
		<Grid.RowDefinitions>
			<RowDefinition Height="55"/> <!-- Fixed height for buttons -->
			<RowDefinition Height="10"/> <!-- Fixed height for progress bar -->
			<RowDefinition Height="Auto"/> <!-- Auto height for labels -->
		</Grid.RowDefinitions>
		
		<!-- Buttons Container - Fixed in Grid.Row="0" -->
		<Grid Grid.Row="0" Width="400">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="10"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			
			<!-- Buy Global Coins Button -->
			<Button
				Grid.Column="0"
				x:Name="buttonBuyCoins"
				Height="55"
				BorderThickness="0"
				Cursor="Hand"
				BorderBrush="{x:Null}"
				Visibility="Visible"
				Click="buttonBuyCoins_Click"
				RenderTransformOrigin="0.5,0.5">
				
				<Button.RenderTransform>
					<ScaleTransform/>
				</Button.RenderTransform>

				<Button.Background>
					<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
						<GradientStop Color="#FFD700" Offset="0"/>
						<GradientStop Color="#FFA500" Offset="1"/>
					</LinearGradientBrush>
				</Button.Background>

				<Button.ToolTip>
					<ToolTip Background="#2a2a2a" BorderBrush="#555" Foreground="White">
						<TextBlock
							FontWeight="Bold"
							Text="Buy Baiak-Zika Coins">
						</TextBlock>
					</ToolTip>
				</Button.ToolTip>

				<Button.Content>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="ðŸ’°" 
								  FontSize="20" 
								  Margin="0,0,8,0"
								  VerticalAlignment="Center"/>
						<TextBlock Text="BUY COINS" 
								  FontWeight="Bold" 
								  FontSize="14" 
								  Foreground="#1a1a1a" 
								  VerticalAlignment="Center"/>
					</StackPanel>
				</Button.Content>
				
				<Button.Style>
					<Style TargetType="{x:Type Button}">
						<Setter Property="Template">
							<Setter.Value>
								<ControlTemplate TargetType="{x:Type Button}">
									<Border Background="{TemplateBinding Background}" 
											CornerRadius="12"
											BorderBrush="#66ffffff"
											BorderThickness="1">
										<Border.Effect>
											<DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.4" BlurRadius="8"/>
										</Border.Effect>
										<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
									</Border>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Trigger.EnterActions>
									<BeginStoryboard Storyboard="{StaticResource ButtonHoverIn}"/>
								</Trigger.EnterActions>
								<Trigger.ExitActions>
									<BeginStoryboard Storyboard="{StaticResource ButtonHoverOut}"/>
								</Trigger.ExitActions>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
			</Button>
			
			<!-- Play Button -->
			<Button
				Grid.Column="2"
				x:Name="buttonPlay"
				Height="55"
				BorderThickness="0"
				Cursor="Hand"
				BorderBrush="{x:Null}"
				Visibility="Visible"
				Click="buttonPlay_Click"
				MouseLeave="buttonPlay_MouseLeave"
				MouseEnter="buttonPlay_MouseEnter"
				RenderTransformOrigin="0.5,0.5">

				<Button.RenderTransform>
					<ScaleTransform/>
				</Button.RenderTransform>

				<Button.Background>
					<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
						<GradientStop Color="#4CAF50" Offset="0"/>
						<GradientStop Color="#2E7D32" Offset="1"/>
					</LinearGradientBrush>
				</Button.Background>

				<Button.ToolTip>
					<ToolTip Background="#2a2a2a" BorderBrush="#555" Foreground="White">
						<TextBlock
							x:Name="buttonPlay_tooltip"
							FontWeight="Bold"
							Text="Play Game">
						</TextBlock>
					</ToolTip>
				</Button.ToolTip>

				<Button.Content>
					<StackPanel Orientation="Horizontal">
						<Image
							x:Name="buttonPlayIcon"
							Source="{StaticResource IconPlayKey}"
							Stretch="Uniform"
							Height="28"
							Margin="0,0,12,0"/>
						<TextBlock Text="PLAY GLOBAL" 
								   FontWeight="Bold" 
								   FontSize="20" 
								   Foreground="White" 
								   VerticalAlignment="Center"/>
					</StackPanel>
				</Button.Content>

				<Button.Style>
					<Style TargetType="{x:Type Button}">
						<Setter Property="Template">
							<Setter.Value>
								<ControlTemplate TargetType="{x:Type Button}">
									<Border Background="{TemplateBinding Background}" 
											CornerRadius="12"
											BorderBrush="#66ffffff"
											BorderThickness="1">
										<Border.Effect>
											<DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.4" BlurRadius="8"/>
										</Border.Effect>
										<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
									</Border>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Trigger.EnterActions>
									<BeginStoryboard Storyboard="{StaticResource ButtonHoverIn}"/>
								</Trigger.EnterActions>
								<Trigger.ExitActions>
									<BeginStoryboard Storyboard="{StaticResource ButtonHoverOut}"/>
								</Trigger.ExitActions>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
			</Button>
		</Grid>

		<!-- Enhanced Progress Bar - Fixed in Grid.Row="1" -->
		<ProgressBar
			Grid.Row="1"
			x:Name="progressbarDownload"
			Width="400"
			Height="10"
			Margin="0,5,0,0"
			Value="100"
			Visibility="Collapsed"
			Background="#33ffffff"
			BorderThickness="0">
			<ProgressBar.Foreground>
				<LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
					<GradientStop Color="#FFD700" Offset="0" />
					<GradientStop Color="#FFA500" Offset="1" />
				</LinearGradientBrush>
			</ProgressBar.Foreground>
			<ProgressBar.Style>
				<Style TargetType="ProgressBar">
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="ProgressBar">
								<Border Background="{TemplateBinding Background}" 
										CornerRadius="5"
										BorderThickness="0">
									<Grid>
										<Border Name="PART_Track" 
												Background="{TemplateBinding Background}" 
												CornerRadius="5"/>
										<Border Name="PART_Indicator" 
												Background="{TemplateBinding Foreground}" 
												CornerRadius="5"
												HorizontalAlignment="Left"/>
									</Grid>
								</Border>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</ProgressBar.Style>
		</ProgressBar>

		<!-- Enhanced Labels - Fixed in Grid.Row="2" -->
		<StackPanel Grid.Row="2" Margin="0,10,0,0">
			<TextBlock
				x:Name="labelClientVersion"
				FontFamily="Segoe UI"
				FontSize="12"
				FontWeight="SemiBold"
				Foreground="#E0E0E0"
				HorizontalAlignment="Center"
				Visibility="Visible"
				Text="Client Version"/>
			<TextBlock
				x:Name="labelDownloadPercent"
				FontFamily="Segoe UI"
				FontSize="11"
				FontWeight="Medium"
				Foreground="#B0B0B0"
				HorizontalAlignment="Center"
				Margin="0,5,0,0"
				Visibility="Collapsed"
				Text="Download"/>
		</StackPanel>
	</Grid>
</Grid>
		<!-- News/Hints Section - Right Side -->
			<Grid Grid.Row="1" Grid.RowSpan="3">
				<Border
					Width="400"
					Height="280"
					VerticalAlignment="Top"
					HorizontalAlignment="Right"
					Margin="0,20,50,0"
					CornerRadius="15">
					<Border.Background>
						<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
							<GradientStop Color="#2a2a2a" Offset="0"/>
							<GradientStop Color="#1e1e1e" Offset="1"/>
						</LinearGradientBrush>
