	</Border>
</Grid>

			<!-- Countdowns Section - Positioned at top left -->
			<Grid x:Name="CountdownsGrid" Grid.Row="2" Grid.RowSpan="2" Width="240" Height="140" 
				  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="45,-10,0,0">
				<!-- Main Background Container -->
				<Border
					x:Name="CountdownsBackgroundContainer"
					VerticalAlignment="Stretch"
					HorizontalAlignment="Stretch"
					CornerRadius="15">
					<Border.Background>
						<SolidColorBrush Color="Transparent"/>
					</Border.Background>
				</Border>

				<!-- Title Header -->
				<Border
					x:Name="CountdownsTitle"
					Width="180"
					Height="Auto"
					VerticalAlignment="Top"
					HorizontalAlignment="Center"
					Margin="0,-15,0,0"
					CornerRadius="8"
					Padding="10,5">
					<Border.Background>
						<LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
							<GradientStop Color="#FFD700" Offset="0"/>
							<GradientStop Color="#FFA500" Offset="1"/>
						</LinearGradientBrush>
					</Border.Background>
					<Border.Effect>
						<DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.4" BlurRadius="8"/>
					</Border.Effect>
					<TextBlock
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						FontFamily="Segoe UI"
						FontSize="13"
						FontWeight="Bold"
						Foreground="#1a1a1a"
						Text="â±ï¸ UPCOMING EVENTS"/>
				</Border>

				<!-- Countdowns Container -->
				<StackPanel
					x:Name="CountdownsStackPanel"
					Width="135"
					VerticalAlignment="Top"
					HorizontalAlignment="Center"
					Margin="0,20,0,0">
					
					<!-- First Countdown -->
					<Border
						x:Name="FirstCountdownContainer"
						Margin="0,0,0,10"
						Padding="8,5"
						CornerRadius="8"
						Cursor="Hand"
						MouseLeftButtonDown="CountdownsPanel_MouseLeftButtonDown">
						<Border.ToolTip>
							<ToolTip Background="#2a2a2a" BorderBrush="#555" Foreground="White">
								<TextBlock Text="Click to refresh event countdowns from luneraot.com" FontWeight="Bold"/>
							</ToolTip>
						</Border.ToolTip>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="Auto"/>
							</Grid.ColumnDefinitions>
							
							<StackPanel Grid.Column="0">
								<TextBlock 
									x:Name="FirstCountdownName"
									Text="Loading..."
									FontFamily="Segoe UI"
									FontSize="12"
									FontWeight="SemiBold"
									Foreground="#F0F0F0"/>
								<TextBlock 
									x:Name="FirstCountdownTime"
									Text="--:--:--"
									FontFamily="Segoe UI"
									FontSize="14"
									FontWeight="Bold"
									Foreground="#FFD700"/>
							</StackPanel>
							
							<TextBlock 
								Grid.Column="1"
								Text="â±ï¸"
								FontSize="20"
								VerticalAlignment="Center"
								Margin="5,0,0,0"
								Foreground="White"/>
						</Grid>
					</Border>
					
					<!-- Second Countdown -->
					<Border
						x:Name="SecondCountdownContainer"
						Padding="8,5"
						CornerRadius="8"
						Cursor="Hand"
						MouseLeftButtonDown="CountdownsPanel_MouseLeftButtonDown">
						<Border.ToolTip>
							<ToolTip Background="#2a2a2a" BorderBrush="#555" Foreground="White">
								<TextBlock Text="Click to refresh event countdowns from luneraot.com" FontWeight="Bold"/>
							</ToolTip>
						</Border.ToolTip>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="Auto"/>
							</Grid.ColumnDefinitions>
							
							<StackPanel Grid.Column="0">
								<TextBlock 
									x:Name="SecondCountdownName"
									Text="Loading..."
									FontFamily="Segoe UI"
									FontSize="12"
									FontWeight="SemiBold"
									Foreground="#F0F0F0"/>
								<TextBlock 
									x:Name="SecondCountdownTime"
									Text="--:--:--"
									FontFamily="Segoe UI"
									FontSize="14"
									FontWeight="Bold"
									Foreground="#FFA500"/>
							</StackPanel>
							
							<TextBlock 
								Grid.Column="1"
								Text="â±ï¸"
								FontSize="20"
								VerticalAlignment="Center"
								Margin="5,0,0,0"
								Foreground="White"/>
						</Grid>
					</Border>
				</StackPanel>
			</Grid>

			<!-- Footer -->
			<Grid Grid.Row="4" Margin="20,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				
				<!-- Version Label -->
				<TextBlock
					Grid.Column="0"
					x:Name="labelVersion"
					FontFamily="Segoe UI"
					FontSize="11"
					FontWeight="SemiBold"
					Foreground="#B0B0B0"
					VerticalAlignment="Center"
					HorizontalAlignment="Left"
					Text="Version"/>
				
				<!-- Company Logo -->
				<Image
					Grid.Column="1"
					x:Name="ImageLogoCompany"
					Source="{StaticResource LogoCompanyKey}"
					Height="18"
					Stretch="Uniform"
					VerticalAlignment="Center"
					HorizontalAlignment="Center">
					<Image.Effect>
						<DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" Opacity="0.2" BlurRadius="3"/>
					</Image.Effect>
				</Image>
				
				<!-- Status Indicator -->
				<StackPanel Grid.Column="2" 
							VerticalAlignment="Center" 
							HorizontalAlignment="Right" 
							Orientation="Horizontal">
					<Ellipse Width="6" Height="6" 
							Fill="#4CAF50" 
							Margin="0,0,5,0">
						<Ellipse.Effect>
							<DropShadowEffect Color="#4CAF50" Direction="0" ShadowDepth="0" Opacity="0.8" BlurRadius="3"/>
						</Ellipse.Effect>
					</Ellipse>
					<TextBlock Text="Online" 
							  FontFamily="Segoe UI" 
							  FontSize="9" 
							  FontWeight="Medium" 
							  Foreground="#4CAF50"/>
				</StackPanel>
			</Grid>
			
					</Grid>
	</Border>
</Window>
