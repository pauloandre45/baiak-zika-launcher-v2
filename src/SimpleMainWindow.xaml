<Window x:Class="BaiakZikaLauncher.SimpleMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Baiak-Zika Launcher" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1a1a2e">
    
    <Grid>
        <!-- Título -->
        <TextBlock Text="Baiak-Zika" 
                   FontSize="48" FontWeight="Bold"
                   Foreground="#e94560"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,40,0,0"/>
        
        <TextBlock Text="Launcher Oficial"
                   FontSize="14"
                   Foreground="#888888"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,100,0,0"/>
        
        <!-- Status -->
        <TextBlock x:Name="StatusText"
                   Text="Verificando atualizações..."
                   FontSize="14"
                   Foreground="#cccccc"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,-20,0,0"/>
        
        <!-- Barra de Progresso -->
        <ProgressBar x:Name="ProgressBar"
                     Width="400" Height="25"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="0,30,0,0"
                     Visibility="Collapsed"/>
        
        <!-- Versão -->
        <TextBlock x:Name="VersionText"
                   Text="Versão: 1.0.0"
                   FontSize="11"
                   Foreground="#666666"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,80,0,0"/>
        
        <!-- Botões -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,50">
            
            <Button x:Name="PlayButton"
                    Content="▶  JOGAR"
                    Width="180" Height="50"
                    FontSize="16" FontWeight="Bold"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    IsEnabled="False"
                    Click="PlayButton_Click"/>
            
            <Button x:Name="UpdateButton"
                    Content="⟳  ATUALIZAR"
                    Width="150" Height="50"
                    FontSize="14" FontWeight="Bold"
                    Background="#e94560"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="20,0,0,0"
                    Visibility="Collapsed"
                    Click="UpdateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
