<Window x:Class="BaiakZikaLauncher.SplashScreen"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:BaiakZikaLauncher"
		Icon="pack://application:,,,/Assets/launcher_ico.png"
		mc:Ignorable="d"
		Background="#1a1a1a"
		AllowsTransparency="True"
		ResizeMode="NoResize"
		WindowStyle="None"
		WindowStartupLocation="CenterScreen"
		Title="Loading GlobalLauncher" Height="500" Width="800">
	<!-- Main Container with rounded corners to match MainWindow -->
	<Border CornerRadius="15" Background="Transparent" BorderBrush="#333" BorderThickness="1">
		<Grid>
			<!-- Background with gradient -->
			<Border CornerRadius="15" ClipToBounds="True">
				<Border.Background>
					<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
						<GradientStop Color="#1a1a1a" Offset="0"/>
						<GradientStop Color="#2d2d2d" Offset="1"/>
					</LinearGradientBrush>
				</Border.Background>
			</Border>
			
			<!-- Main content -->
			<Grid>
			<!-- Logo with glow effect -->
			<Border HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-80,0,0" Background="Transparent">
				<Border.Effect>
					<DropShadowEffect Color="#FFD700" Direction="0" ShadowDepth="0" Opacity="0.6" BlurRadius="15"/>
				</Border.Effect>
				<Image
					x:Name="LogoImage"
					Height="120"
					Stretch="Uniform"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"/>
			</Border>
			
			<!-- Loading text -->
			<TextBlock
				x:Name="LoadingText"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Margin="0, 80, 0, 0"
				Foreground="White"
				FontSize="18"
				FontWeight="Bold"
				Text="Initializing Baiak-Zika Launcher..."
				TextAlignment="Center"/>
			
			<!-- Progress bar -->
			<ProgressBar
				x:Name="LoadingProgressBar"
				Width="400"
				Height="8"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Margin="0, 120, 0, 0"
				Background="#333333"
				Foreground="#4CAF50"
				BorderThickness="0"
				Value="0"/>
			
			<!-- Status text -->
			<TextBlock
				x:Name="StatusText"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Margin="0, 150, 0, 0"
				Foreground="#CCCCCC"
				FontSize="12"
				Text="Starting up..."
				TextAlignment="Center"/>
			
			<!-- Loading steps indicator - FIXED: Only 4 steps to match actual steps -->
			<StackPanel
				x:Name="StepsPanel"
				Orientation="Horizontal"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Margin="0, 180, 0, 0">
				
				<Border x:Name="Step1" Width="12" Height="12" CornerRadius="6" Background="#333333" Margin="5,0"/>
				<Border x:Name="Step2" Width="12" Height="12" CornerRadius="6" Background="#333333" Margin="5,0"/>
				<Border x:Name="Step3" Width="12" Height="12" CornerRadius="6" Background="#333333" Margin="5,0"/>
				<Border x:Name="Step4" Width="12" Height="12" CornerRadius="6" Background="#333333" Margin="5,0"/>
			</StackPanel>
			
			<!-- Version info -->
			<TextBlock
				x:Name="VersionText"
				HorizontalAlignment="Center"
				VerticalAlignment="Bottom"
				Margin="0, 0, 0, 20"
				Foreground="#666666"
				FontSize="10"
				Text="Baiak-Zika Launcher v1.2"
				TextAlignment="Center"/>
			</Grid>
		</Grid>
	</Border>
</Window>